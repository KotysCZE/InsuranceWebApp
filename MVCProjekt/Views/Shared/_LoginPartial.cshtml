@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using MVCProjekt.Extensions;
@{ string bg = DarkModeAddOn.TimeCheckerBg(); string text = DarkModeAddOn.TimeCheckerText();}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text->@text">@User.Identity?.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-@text">Odhlásit se</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-@text" asp-area="" asp-controller="Account" asp-action="Login">Přihlásit se</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-@text" asp-area="" asp-controller="Account" asp-action="Register">Registrovat se</a>
        </li>
    }
</ul>
